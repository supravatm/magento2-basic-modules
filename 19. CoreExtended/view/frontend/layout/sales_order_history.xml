<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   
    <body>
        <!-- This will add additional column header to order list -->
        <referenceContainer name="sales.order.history.extra.column.header">
            <block name="coreextended.additional.column.header" template="SMG_CoreExtended::history-header.phtml"/>
        </referenceContainer>

        <!-- You can access current order using $this->getOrder() inside the template "-->
        <referenceBlock name="sales.order.history.extra.container">
            <block name="coreextended.additional.column.data" template="SMG_CoreExtended::history.phtml"/>
        </referenceBlock>
    </body>
</page>
