<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" 
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="smg.customer.login.link"  
                template="SMG_CoreExtended::login_history.phtml" cacheable="false">

                <arguments>
                    <argument name="view_model" xsi:type="object">SMG\CoreExtended\ViewModel\CustomerLoginHistory</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>