<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

<!-- Add the column "delivery_date" to the sales order grid. -->
    <columns name="sales_order_columns">
        <column name="delivery_date" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date" sortOrder="100">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dateFormat" xsi:type="string">MMM d, YYYY</item>
                </item>
            </argument>
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Delivery Date</label>
            </settings>
        </column>
    </columns>
</listing>