<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <!-- Set product attribute and addtional_data  to Quote_Item Table -->
    <event name="sales_quote_item_set_product">
        <observer name="save_to_quote_manufacturer" 
            instance="SMG\CustomFieldToQuoteItem\Observer\AddFieldToQuoteItem"  disabled="false" />
    </event>
    <event name="catalog_product_load_after">
        <observer name="set_additional_options" 
            instance="SMG\CustomFieldToQuoteItem\Observer\SetAdditionalOptions"  disabled="true" />
    </event>

    <event name="sales_model_service_quote_submit_before">
        <observer name="unique_name" 
            instance="SMG\CustomFieldToQuoteItem\Observer\OrderItemAdditionalOptions"  disabled="true" />
    </event>

</config>